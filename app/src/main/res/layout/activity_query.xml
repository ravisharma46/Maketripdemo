<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".query">




<RelativeLayout
    android:layout_width="match_parent"
    android:layout_above="@+id/submit_query"
    android:layout_height="wrap_content">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/blue"
                />


            <Button
                android:layout_width="60dp"
                android:background="@drawable/fab_bt"
                android:drawableStart="@drawable/ic_person_outline_black_24dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="-30dp"
                android:layout_gravity="center"
                android:layout_height="60dp" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Hello, Visitor!"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="Planning for a holiday?"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="Your Destination"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_gravity="left"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:paddingLeft="10dp"
                android:inputType="text"
                android:background="@drawable/edit_layout"
                android:textCursorDrawable="@null"
                android:layout_marginTop="10dp"
                android:text="Bhutan"
                android:layout_marginRight="15dp"
                android:layout_height="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Your name"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_gravity="left"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:paddingLeft="10dp"
                android:inputType="textPersonName"
                android:background="@drawable/edit_layout"
                android:textCursorDrawable="@null"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_height="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Your travel date"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_gravity="left"
                android:layout_height="wrap_content" />




            <TextView
                android:layout_width="match_parent"
                android:id="@+id/date_set"
                android:layout_marginLeft="15dp"
                android:paddingLeft="10dp"
                android:inputType="date"
                android:text="13 jun 2019"
                android:paddingTop="10dp"
                android:background="@drawable/edit_layout"
                android:textCursorDrawable="@null"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_height="40dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:text="Email address"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_gravity="left"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:paddingLeft="10dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/edit_layout"
                android:textCursorDrawable="@null"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_height="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Mobile number"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_gravity="left"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:paddingLeft="10dp"
                android:inputType="number"
                android:background="@drawable/edit_layout"
                android:textCursorDrawable="@null"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_height="50dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <CheckBox
                    android:layout_width="30dp"
                    android:checked="true"
                    android:buttonTint="@color/blue"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="23dp"
                    android:layout_height="30dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="top"
                    android:layout_marginBottom="20dp"
                    android:text="I request MMT to contact me on above \nphone number or email and thus such \ncontacting is 'transanctional' as per 'TRAI' \nrules."
                    android:layout_height="wrap_content" />
            </LinearLayout>








        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:clickable="true"
            android:drawableStart="@drawable/ic_arrow_back_black_24dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>






    <Button
        android:layout_width="match_parent"
        android:id="@+id/submit_query"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/done_button"
        android:text="SUBMIT"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />







</RelativeLayout>