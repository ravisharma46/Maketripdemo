<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/select_booking"
    android:layout_height="match_parent"
    tools:context=".SelectBookingDetails">



    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linear"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content">



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="25dp"
            app:cardElevation="5dp"
            android:layout_height="100dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_height="match_parent">



               <TextView
                   android:layout_width="match_parent"
                   android:text="STARTING ON"
                   android:paddingTop="5dp"
                   android:paddingLeft="15dp"
                   android:layout_marginTop="20dp"
                   android:layout_height="30dp" />


               <TextView
                   android:layout_width="220dp"
                   android:id="@+id/date_set"
                   android:layout_marginTop="8dp"
                   android:paddingLeft="15dp"
                   android:text="26 Aug 2019 Monday"
                   android:textStyle="bold"
                   android:textColor="@color/black"
                   android:textSize="20sp"
                   android:layout_height="40dp" />

               <TextView
                   android:id="@+id/datePick"
                   android:layout_width="70dp"
                   android:layout_marginTop="-45dp"
                   android:text="CHANGE"
                   android:textSize="12dp"
                   android:textColor="@color/blue"
                   android:paddingTop="9dp"
                   android:paddingLeft="15dp"
                   android:textStyle="bold"
                   android:layout_marginRight="10dp"
                   android:layout_gravity="right"
                   android:layout_height="40dp" />


           </LinearLayout>

        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            app:cardElevation="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:text="TRAVELLERS - ROOM WISE"
                    android:paddingTop="5dp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="30dp" />


                <TextView
                    android:layout_width="280dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/room_set"
                    android:paddingLeft="15dp"
                    android:text="1 Adults in 1 Room"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_height="40dp" />

                <TextView
                    android:layout_width="70dp"
                    android:id="@+id/room"
                    android:layout_marginTop="-45dp"
                    android:text="CHANGE"
                    android:textSize="12dp"
                    android:textColor="@color/blue"
                    android:paddingTop="9dp"
                    android:paddingLeft="15dp"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right"
                    android:layout_height="40dp" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/done_button"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Done"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textStyle="bold"/>


</RelativeLayout>