<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:elevation="25dp"
            app:cardCornerRadius="5dp"
            android:layout_height="220dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/linearLayout"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/room_1"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:text="ROOM 1" />


                <Button
                    android:layout_width="match_parent"
                    android:id="@+id/remove"
                    android:layout_gravity="right"
                    android:text="REMOVE"
                    android:layout_marginTop="-40dp"
                    android:layout_marginLeft="200dp"
                    android:textColor="@color/blue"
                    android:background="@drawable/add_button"
                    android:layout_height="40dp" />


                <TextView
                    android:layout_width="70dp"
                    android:id="@+id/adult_1"
                    android:layout_height="40dp"
                    android:gravity="bottom"
                    android:paddingLeft="14dp"
                    android:textSize="18dp"
                    android:text="Adults"
                    android:textColor="@color/black"

                    android:textStyle="bold" />

                <TextView
                    android:layout_width="130dp"
                    android:id="@+id/adultA_1"
                    android:layout_height="40dp"
                    android:gravity="top"
                    android:paddingLeft="14dp"
                    android:text="Age 12y and above"

                    android:textSize="13dp" />


                <TextView
                    android:layout_width="100dp"
                    android:id="@+id/child_1"
                    android:layout_height="40dp"
                    android:gravity="bottom"
                    android:textSize="18dp"
                    android:paddingLeft="14dp"
                    android:text="Children"
                    android:textColor="@color/black"

                    android:textStyle="bold" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:id="@+id/childA_1"
                    android:gravity="top"
                    android:paddingLeft="14dp"
                    android:text="Age 11y and below"

                    android:textSize="13dp" />


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="-140dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="40dp"
                            android:id="@+id/decrease"
                            android:text="-"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:background="@drawable/add_button"
                             />

                        <TextView
                            android:layout_width="40dp"
                            android:id="@+id/integer_number"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="01" />

                        <Button
                            android:layout_width="40dp"
                            android:id="@+id/increase"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="+"
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:background="@drawable/add_button"
                            />


                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="45dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="40dp"
                            android:id="@+id/decrease_2"
                            android:text="-"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textAlignment="center"

                            android:layout_height="wrap_content"
                            android:background="@drawable/add_button"
                            />

                        <TextView
                            android:layout_width="40dp"
                            android:id="@+id/integer_number2"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="00" />

                        <Button
                            android:layout_width="40dp"
                            android:id="@+id/increase_2"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="+"
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:background="@drawable/add_button"
                            />


                    </LinearLayout>


                </android.support.v7.widget.CardView>



            </LinearLayout>






        </android.support.v7.widget.CardView>





    </LinearLayout>





</android.support.constraint.ConstraintLayout>